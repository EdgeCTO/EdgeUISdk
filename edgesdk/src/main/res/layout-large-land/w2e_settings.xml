<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:id="@+id/w2earn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:focusable="auto"
        android:background="@color/main_screen_bg"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="auto"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_settings_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Gaimified Tv"
                    android:textColor="@color/white"
                    android:textSize="48sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:id="@+id/txt_w2e_status_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="Watch2earn: " />
                        <TextView
                            android:id="@+id/txt_w2e_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textSize="12dp"
                            android:textColor="@color/yellow"
                            android:text="Active" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        >
                        <TextView
                            android:id="@+id/txt_staking_status_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="Staking" />

                        <TextView
                            android:id="@+id/txt_staking_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/yellow"
                            android:textSize="12dp"
                            android:text="Active" />

                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="vertical">
                <com.edgesdk.TypeWriterView

                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/white"
                    android:text="Gaimified description"
                    android:textSize="13sp" ></com.edgesdk.TypeWriterView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white" />
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Controls"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Select the UI controls"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/ckbx_should_ticker_hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:nextFocusRight="@id/txtWalletAddress"
                        android:paddingStart="8dp"
                        android:nextFocusDown="@id/ckbx_should_gaimified_ticker_hide"
                        android:nextFocusUp="@id/txtWalletAddress"
                        android:text="Auto-hide Watch2Earn Ticker"

                        />
                    <CheckBox
                        android:id="@+id/ckbx_should_gaimified_ticker_hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:paddingStart="8dp"
                        android:nextFocusUp="@id/ckbx_should_ticker_hide"
                        android:nextFocusDown="@id/optOutW2E"
                        android:text="Auto-hide Gaimified Ticker"

                        />

                    <CheckBox
                        android:id="@+id/optOutW2E"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:paddingStart="8dp"
                        android:nextFocusUp="@id/ckbx_should_ticker_hide"
                        android:nextFocusDown="@id/txtWalletAddress"
                        android:text="Opt-out from W2E" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Wallet"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white" />
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connect your Metamask, Brave or other Web3 wallet on your PC here: edgevideo.com/activate"
                        android:textColor="@color/white"
                        android:textSize="20sp"></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/txtWalletAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:background="@drawable/edittext_outline"
                            android:ems="10"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:hint="XXXX"
                            android:inputType="textPersonName"
                            android:minHeight="48dp"
                            android:nextFocusRight="@id/btnModify"
                            android:nextFocusLeft="@id/ckbx_should_gaimified_ticker_hide"
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray"
                            android:textSize="34sp" />
                        <Button
                            android:id="@+id/btnModify"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:background="#303030"
                            style="@style/CustomButtonStyle"
                            android:layout_height="match_parent"
                            android:text="Activate" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/current_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            
                            android:text="Wallet : "></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>